---
/**
 * Login Page
 *
 * @description
 * User login page with email/password form and social authentication options.
 * Uses demo mode by default - configure action prop on LoginForm for real backend.
 */
import MarketingLayout from '../layouts/MarketingLayout.astro';
import LoginForm from '../components/forms/LoginForm.astro';
import SocialAuthButtons from '../components/forms/SocialAuthButtons.astro';
import { siteConfig } from '@/config';
---

<MarketingLayout
  title={`Login - ${siteConfig.name}`}
  description="Sign in to your account to access your dashboard and manage your projects."
>
  <section class="py-section">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-md mx-auto">
        <!-- Card container -->
        <div class="bg-surface rounded-lg border border-border p-8 shadow-sm">
          <!-- Header -->
          <div class="text-center mb-8">
            <h1 class="text-2xl font-bold text-text">Welcome back</h1>
            <p class="mt-2 text-text-muted">
              Sign in to your account to continue
            </p>
          </div>

          <!-- Login Form -->
          <LoginForm />

          <!-- Social Auth -->
          <SocialAuthButtons dividerText="Or continue with" variant="login" />

          <!-- Register link -->
          <p class="mt-6 text-center text-sm text-text-muted">
            Don't have an account?{' '}
            <a
              href="/register"
              class="font-medium text-primary hover:text-primary-dark transition-colors"
            >
              Sign up
            </a>
          </p>
        </div>
      </div>
    </div>
  </section>
</MarketingLayout>
